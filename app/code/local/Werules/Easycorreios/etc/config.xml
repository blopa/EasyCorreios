<?xml version="1.0"?>
<config>
	<modules>
		<Werules_Easycorreios>
			<version>0.0.1</version>
		</Werules_Easycorreios>
	</modules>
	<global>
		<blocks>
			<easycorreios>
				<class>Werules_Easycorreios_Block</class>
			</easycorreios>
		</blocks>
		<models>
			<easycorreios>
				<class>Werules_Easycorreios_Model</class>
			</easycorreios>
		</models>
		<resources>
		  <easycorreios_setup>
			<setup>
			  <module>Werules_Easycorreios</module>
			  <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
			</setup>
			<connection>
			  <use>core_setup</use>
			</connection>
		  </easycorreios_setup>
		  <categoryattribute1379261918_write>
			<connection>
			  <use>core_write</use>
			</connection>
		  </categoryattribute1379261918_write>
		  <categoryattribute1379261918_read>
			<connection>
			  <use>core_read</use>
			</connection>
		  </categoryattribute1379261918_read>
		</resources>
		<helpers>
			<easycorreios>
				<class>Werules_Easycorreios_Helper</class>
			</easycorreios>
		</helpers>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<werules_easycorreios after="Mage_Adminhtml">Werules_Easycorreios_Adminhtml</werules_easycorreios>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<frontend>
        <routers>
            <easycorreios>
                <use>standard</use>
                <args>
                    <module>Werules_Easycorreios</module>
                    <frontName>rastrear</frontName>
                </args>
            </easycorreios>
        </routers>
		<layout> 
			<updates>
				<easycorreios>
					<file>easycorreios.xml</file> 
				</easycorreios> 
			</updates> 
		</layout> 
    </frontend>
	
	<adminhtml>
		<layout>
			<updates>
				<easycorreios>
					<file>easycorreios.xml</file>
				</easycorreios>
			</updates>
		</layout>
	</adminhtml>
	<crontab>
        <jobs>
            <werules_easycorreios_update>
                <schedule><cron_expr>0 6 * * *</cron_expr></schedule>
                <run><model>easycorreios/observer::atualizaCodigo</model></run>
            </werules_easycorreios_update>
        </jobs>
	</crontab>
	
</config>